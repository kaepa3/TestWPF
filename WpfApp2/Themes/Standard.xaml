<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WpfApp2.Themes">


    <Style TargetType="Button" x:Key="ButtonMiddle" BasedOn="{StaticResource MaterialDesignRaisedButton}">
        <Setter Property="MaxHeight" Value="60"/>
        <Setter Property="MaxWidth" Value="100"/>
        <Setter Property="MinHeight" Value="50"/>
        <Setter Property="MinWidth" Value="90"/>
    </Style>


    <Style TargetType="Button" x:Key="IconButton" BasedOn="{StaticResource MaterialDesignRaisedButton}">
        <Setter Property="MaxHeight" Value="150"/>
        <Setter Property="MaxWidth" Value="150"/>
        <Setter Property="Height" Value="auto"/>
        <Setter Property="Width" Value="auto"/>
    </Style>
</ResourceDictionary>